<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <ImageView
        android:id="@+id/popup_friends_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:elevation="5dp"
        android:src="@drawable/ic_close"
        android:clickable="true"
        android:focusable="true" />

    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        android:id="@+id/popup_friends_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="57dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/popup_friends_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_white">

                <TextView
                    android:id="@+id/popup_friends_header_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:text="Invite Friends"
                    android:textColor="@color/black"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/popup_friends_separator_top"
                android:layout_width="match_parent"
                android:layout_below="@id/popup_friends_header"
                android:layout_height="1dp"
                android:background="@color/black_light"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/popup_friends_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/popup_friends_separator_top"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/popup_friends_separator_bottom"
                    android:layout_width="match_parent"
                    android:layout_above="@id/popup_friends_nav"
                    android:layout_height="1dp"
                    android:background="@color/black_light"/>

                <RelativeLayout
                    android:id="@+id/popup_friends_nav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/popup_friends_back"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/border_red"
                        android:textColor="@color/black"
                        android:text="Back"
                        android:layout_marginStart="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true" />

                    <Button
                        android:id="@+id/popup_friends_next"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/border_green"
                        android:textColor="@color/black"
                        android:text="Next"
                        android:layout_marginEnd="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />

                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>