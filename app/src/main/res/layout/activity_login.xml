<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    tools:context=".Activity.LoginActivity">

    <ImageView
        android:id="@+id/login_logo_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/loginlogo"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/login_username"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_below="@+id/login_logo_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="#11000000"
        android:hint="@string/mailLogin"
        android:inputType="textEmailAddress"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_below="@+id/login_username"
        android:layout_alignStart="@+id/login_username"
        android:layout_marginTop="30dp"
        android:background="#11000000"
        android:hint="@string/keyLogin"
        android:inputType="textPassword"
        android:textSize="16sp" />

    <Button
        android:id="@+id/login_login_button"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_below="@id/login_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:elevation="5dp"
        android:background="@drawable/shadow_rect"
        android:text="@string/loginLogin"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/login_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login_login_button"
        android:layout_alignTop="@+id/login_login_button"
        android:layout_alignEnd="@+id/login_login_button"
        android:layout_alignBottom="@+id/login_login_button"
        android:layout_centerInParent="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/login_register_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:inputType="text"
        android:text="@string/registerLogin"
        android:textColor="@android:color/background_dark"
        android:textSize="14dp"
        android:onClick="onClick"
        android:clickable="true"/>

</RelativeLayout>