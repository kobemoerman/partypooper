<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/frag_create_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="What party are you having?"
        android:textColor="@color/black"
        android:textSize="25sp"
    />

    <TextView
        android:id="@+id/frag_create_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frag_create_header"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Get recommendations based on the party theme"
        android:textColor="@color/black_light"
        android:textSize="16sp"
    />

    <View
        android:id="@+id/frag_create_separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_below="@+id/frag_create_desc"
        android:background="@color/black_light"
    />

    <TextView
        android:id="@+id/frag_create_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/frag_create_separator"
        android:text="Pick a theme:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frag_create_theme"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="15dp">

            <android.support.v7.widget.CardView
                app:cardCornerRadius="5dp"
                android:id="@+id/frag_create_house_party"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:clickable="true"
                android:focusable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border_green">

                    <TextView
                        android:id="@+id/frag_create_house_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:text="House Party"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                    />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/frag_create_house_text"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/emoji_party"
                    />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    app:cardCornerRadius="5dp"
                    android:id="@+id/frag_create_birthday_party"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:focusable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border_green">

                    <TextView
                        android:id="@+id/frag_create_birthday_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:text="Birthday Party"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                    />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/frag_create_birthday_text"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/emoji_birthday"
                    />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="15dp">

            <android.support.v7.widget.CardView
                    app:cardCornerRadius="5dp"
                    android:id="@+id/frag_create_dinner_party"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:clickable="true"
                    android:focusable="true">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/border_green">

                    <TextView
                            android:id="@+id/frag_create_dinner_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:text="Dinner Party"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                    />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/frag_create_dinner_text"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/emoji_dinner"
                    />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    app:cardCornerRadius="5dp"
                    android:id="@+id/frag_create_other_party"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:focusable="true">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/border_green">

                    <TextView
                            android:id="@+id/frag_create_other_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:text="Other"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                    />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/frag_create_other_text"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/emoji_other"
                    />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_active"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/circle_not_active"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_not_active"
        />

    </LinearLayout>

</RelativeLayout>