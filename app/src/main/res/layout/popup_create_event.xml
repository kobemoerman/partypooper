<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/popup_event_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="5dp"
        android:src="@drawable/ic_close"
        android:clickable="true"
        android:focusable="true" />

    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/popup_event_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_white">

                <TextView
                    android:id="@+id/popup_event_header_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:text="Create Event"
                    android:textColor="@color/black"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/popup_event_separator_top"
                android:layout_width="match_parent"
                android:layout_below="@id/popup_event_header"
                android:layout_height="1dp"
                android:background="@color/black_light"/>

            <RelativeLayout
                android:id="@+id/popup_event_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/popup_event_separator_top"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Information"
                    android:textSize="18dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/text2"
                    android:layout_below="@id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Information"
                    android:textSize="18dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/text3"
                    android:layout_below="@id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Information"
                    android:textSize="18dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_below="@id/text3"
                    android:id="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Information"
                    android:textSize="18dp"
                    android:gravity="center_horizontal"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/popup_event_separator_bottom"
                android:layout_width="match_parent"
                android:layout_below="@id/popup_event_info"
                android:layout_height="1dp"
                android:background="@color/black_light"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/popup_event_separator_bottom"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/popup_event_back"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/border_red"
                    android:textColor="@color/black"
                    android:text="Back"
                    android:layout_marginStart="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true" />

                <Button
                    android:id="@+id/popup_event_next"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/border_green"
                    android:textColor="@color/black"
                    android:text="Next"
                    android:layout_marginEnd="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>