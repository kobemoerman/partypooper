<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/calendar"
    android:padding="5dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_calendar_image"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@color/colorPrimary"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_calendar_image"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_calendar_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="5dp"
                android:text="20:00"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/item_calendar_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Event Name."
                android:textSize="22sp"
                android:textColor="@color/black"
                android:maxLength="60"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_calendar_image"
            android:layout_alignParentEnd="true"

            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_calendar_next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/ic_navigate_next"
                />

            <TextView
                android:id="@+id/item_calendar_host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username invited you."
                android:textSize="16sp"
                />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>