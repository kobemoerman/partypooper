<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_create_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <RelativeLayout
        android:id="@+id/frag_create_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/background_white">

        <ImageView
            android:id="@+id/frag_create_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_image"
        />

        <ImageView
            android:id="@+id/frag_create_image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@color/colorPrimary"
        />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/frag_create_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frag_create_image"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_light"
        />

        <EditText
            android:id="@+id/frag_create_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:hint="Event Name"
            android:background="@null"
            android:maxLines="1"
            android:maxLength="35"
            android:textSize="25sp"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/frag_create_name"
            android:background="@color/black_light"
        />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/frag_create_upload_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frag_create_layout_name"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/frag_create_upload_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorPrimary"
            android:text="Upload image"
            android:textSize="16sp"
            />

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:id="@+id/frag_create_upload_progress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/frag_create_upload_photo"
        android:background="@color/white">

        <View
            android:id="@+id/frag_create_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="7dp"
            android:background="@color/black_light"
        />

        <TextView
            android:id="@+id/frag_create_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/frag_create_1"
            android:layout_marginStart="10dp"
            android:text="date, at time"
            android:textSize="16sp"
            android:textColor="@color/black"
        />

        <View
            android:id="@+id/frag_create_2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_below="@+id/frag_create_date_time"
            android:background="@color/black_light"
        />

        <EditText
            android:id="@+id/frag_create_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_below="@id/frag_create_2"
            android:background="@null"
            android:hint="Location"
            android:maxLines="1"
            android:textSize="16sp"
            android:textColor="@color/black"
        />

        <View
            android:id="@+id/frag_create_3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_below="@+id/frag_create_location"
            android:background="@color/black_light"
        />

        <EditText
            android:id="@+id/frag_create_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_below="@id/frag_create_3"
            android:background="@null"
            android:hint="Description"
            android:maxLines="7"
            android:textSize="16sp"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/frag_create_description"
            android:background="@color/black_light"
        />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <Button
                android:id="@+id/frag_create_info_back"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/button_background_red"
                android:text="Back"
                android:textColor="@color/white"
                android:textAllCaps="false"
            />

            <Button
                android:id="@+id/frag_create_info_next"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_background_green"
                android:text="Next"
                android:textColor="@color/white"
                android:textAllCaps="false"
            />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:src="@drawable/circle_not_active"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:src="@drawable/circle_active"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:src="@drawable/circle_not_active"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_not_active"
            />

    </LinearLayout>

</RelativeLayout>