<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/frag_home_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"
        />

        <TextView
            android:id="@+id/frag_home_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frag_home_logo"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:text="Welcome to PartyPooper"
            android:textColor="@color/black"
            android:textSize="25sp"
        />

        <TextView
            android:id="@+id/frag_home_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/frag_home_welcome"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:text="The best event-planning application in the world."
            android:textColor="@color/black_light"
            android:textSize="14sp"
        />

        <Button
            android:id="@+id/frag_home_create_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/frag_home_desc"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/border_light"
            android:text="Create event"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:onClick="onClickCreateEventHome"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/frag_home_create_event"
            android:background="@color/black_light"
        />

    </RelativeLayout>

</RelativeLayout>